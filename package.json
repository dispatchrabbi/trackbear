{
  "name": "writing-tracker",
  "private": true,
  "version": "0.14.2",
  "type": "module",
  "engines": {
    "node": ">=22.0.0 <23.0.0"
  },
  "imports": {
    "src/*": "./src/*",
    "server/*": "./server/*"
  },
  "prisma": {
    "seed": "node --import tsx ./prisma/seed/seed.ts"
  },
  "scripts": {
    "start": "node --run start:dev",
    "start:dev": "NODE_ENV=development node --import tsx ./main.ts",
    "start:prod": "NODE_ENV=production node --import tsx ./main.ts",
    "test": "vitest",
    "test:webui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "build": "node --run build:prod",
    "build:prod": "docker build -t dispatchrabbi/trackbear:$(npm pkg get version --workspaces=false | tr -d \\\") -t dispatchrabbi/trackbear:latest --target prod .",
    "lint": "npx eslint --ext .js,.ts,.vue .",
    "compile": "node --run compile:db && node --run compile:client",
    "compile:db": "npx prisma generate",
    "compile:client": "npx vue-tsc && npx vite build --emptyOutDir",
    "migrate:dev": "npx prisma migrate dev && npx prisma generate",
    "migrate:prod": "npx prisma migrate deploy",
    "hooks": "husky install",
    "preversion": "node --run build",
    "version": "VERSION=$(npm pkg get version --workspaces=false | tr -d \\\"); git add .; git commit -m \"v${VERSION}\"; git tag -a \"v${VERSION}\" -m \"v${VERSION}\""
  },
  "dependencies": {
    "@observablehq/plot": "^0.6.15",
    "@prisma/client": "^5.19.1",
    "@quixo3/prisma-session-store": "^3.1.13",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vueuse/core": "^10.9.0",
    "autoprefixer": "^10.4.16",
    "better-queue": "^3.8.12",
    "better-queue-sql": "^1.0.6",
    "body-parser": "^1.20.2",
    "color": "^4.2.3",
    "compression": "^1.7.4",
    "cron": "^3.1.6",
    "d3": "^7.9.0",
    "date-fns": "^2.30.0",
    "deep-eql": "^5.0.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "mailersend": "^2.2.0",
    "markdown-it": "^14.0.0",
    "material-design-icons-iconfont": "^6.7.0",
    "mitt": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "pinia": "^2.1.7",
    "postcss": "^8.4.32",
    "primeicons": "^7.0.0",
    "primevue": "^3.53.0",
    "prisma": "^5.19.1",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.11.0",
    "vite": "^5.0.0",
    "vue": "^3.5.10",
    "vue-router": "^4.2.5",
    "vue-tsc": "^2.0.21",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/color": "^3.0.6",
    "@types/compression": "^1.7.5",
    "@types/d3": "^7.4.3",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/markdown-it": "^13.0.7",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "@vuestic/tailwind": "^0.1.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-vue": "^9.19.2",
    "husky": "^8.0.3",
    "rollup-plugin-visualizer": "^5.11.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0",
    "vitest-mock-extended": "^1.3.1"
  }
}
